<tool id="crosslabel" name="crossLabel (in docker)">
    <description>crossLabel function</description>
    <requirements>
	<container type="docker">rcaloger/crosslabel</container>
    </requirements>
    <command>
 <![CDATA[
	
	tar -xvf $tarFile &&



	Rscript $__tool_directory__/MainCustom.R $MatrixName $NCluster $Format $Separator $NewName 2>$log &&
	
	tar cvzf crosslabel.tar.gz * 2>>$log
 
  ]]> </command>
    <inputs>
	<param format="tar" name="tarFile" label="input tar folder" type="data" optional="true" />
	<param name="MatrixName" value="annotated_lorenz_testSCumi_mm10" type="text"/>
	<param name="NCluster" value="4" type="text"/>
	<param name="Format" value="csv" type="text"/>
	<param name="Separator" value="," type="text"/>
	<param name="NewName" value="crosslabel" type="text"/>
    </inputs>
    <outputs>
        <data name="log" format="txt" label="logfile"/>
       <data format="tar" name="output" from_work_dir="crosslabel.tar.gz" label="tar result folder crosslabel"/>
    </outputs>
    <help>
    </help>
</tool>

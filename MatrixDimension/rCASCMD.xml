<tool id="MatrixDimension" name="matrix dimensions (in docker)">
    <description>dim</description>
    <requirements>
	<container type="docker">repbioinfo/r332.2017.01</container>
    </requirements>
    <command>
 <![CDATA[
	ln -s /data/scratch . &&
	
	ln -s  ${MatrixName} scratch/MatrixName.${format}  &&

	Rscript  $__tool_directory__/MainCustom.R MatrixName $format $separator 2>$log  &&
	mv scratch/dimensions.txt .

  ]]> </command>
    <inputs>
	<param format="csv" name="MatrixName" label="input csv file" type="data" optional="true" />
	<param name="separator" value="," type="text"/>
	<param name="format" value="csv" type="text"/>
    </inputs>
    <outputs>
        <data name="output" format="txt" from_work_dir="dimensions.txt" label="${tool.name} on ${on_string} :matrix dimension"/>
        <data name="log" format="txt" label="${tool.name} on ${on_string} :logfile"/>
    </outputs>
    <help>
    </help>
</tool>
